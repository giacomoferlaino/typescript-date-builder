{
  "name": "date-builder",
  "version": "1.0.0",
  "description": "A simple module to make operations with Date(s) easier.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "lint": "tslint -p tsconfig.json",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/giacomoferlaino/typescript-date-builder.git"
  },
  "keywords": [
    "date-builder",
    "date",
    "builder",
    "date-manage",
    "date",
    "manager",
    "date-math",
    "date",
    "math"
  ],
  "author": "Giacomo Ferlaino",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/giacomoferlaino/typescript-date-builder/issues"
  },
  "homepage": "https://github.com/giacomoferlaino/typescript-date-builder#readme",
  "devDependencies": {
    "@types/jest": "^26.0.13",
    "jest": "^26.4.2",
    "prettier": "2.1.1",
    "ts-jest": "^26.3.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.0.2"
  },
  "files": [
    "src/**/*"
  ]
